<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.u9.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_test"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_test"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TermActivity"
            android:label="@string/terms_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".CourseActivity"
            android:label="@string/courses_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".AssessmentActivity"
            android:label="@string/mentors_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".TermDetailActivity"
            android:label="@string/terms_detail_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".TermActivity">
        </activity>
        <activity
            android:name=".TermAddActivity"
            android:label="@string/term_add"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".TermActivity">
        </activity>
        <activity
            android:name=".TermEditActivity"
            android:label="Edit Term"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".TermActivity">
        </activity>
        <activity
            android:name=".CourseAddActivity"
            android:label="Add Course"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".CourseActivity">
        </activity>
        <activity
            android:name=".CourseDetailActivity"
            android:label="Course Detail"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".CourseActivity">
        </activity>
        <activity
            android:name=".AssessmentAddActivity"
            android:label="Add Assessment"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".AssessmentActivity">
        </activity>
        <activity
            android:name=".AssessmentDetailActivity"
            android:label="Assessment Details"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".AssessmentActivity">
        </activity>
        <activity
            android:name=".AssessmentEditActivity"
            android:label="Edit Assessment"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".AssessmentActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name=".CourseEditActivity"
            android:label="Edit Course"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".CourseDetailActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name=".CourseNotesActivity"
            android:label="Course Notes"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".CourseDetailActivity">
        </activity>
        <activity
            android:name=".CourseEditActivity2"
            android:label="Choose Assessment"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".CourseEditActivity">
        </activity>
        <activity
            android:name=".CourseAddActivity2O"
            android:label="Choose Assessment"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".CourseAddActivity">
        </activity>
        <activity
            android:name=".CourseAddActivity2P"
            android:label="Choose Assessment"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".CourseAddActivity">
        </activity>
        <activity
            android:name=".CourseEditActivity2P"
            android:label="Choose Assessment"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".CourseEditActivity">
        </activity>
    </application>

</manifest>