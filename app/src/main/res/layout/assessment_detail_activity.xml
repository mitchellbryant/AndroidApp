<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u9.myapplication.AssessmentDetailActivity">

    <Button
        android:id="@+id/editAssessmentBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/assessmentTitleText"
        android:background="@android:color/holo_red_dark"
        android:onClick="onClickDelAssessmentBtn"
        android:text="Delete Assessment" />

    <Button
        android:id="@+id/editAssessmentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/appBarLayout"
        android:background="@android:color/holo_orange_light"
        android:onClick="onClickEditBtn"
        android:text="   Edit Assessment  " />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_assessment_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </android.support.design.widget.AppBarLayout>


    <TextView
        android:id="@+id/assessmentNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editAssessmentBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:text="Assessment Name"
        android:textStyle="bold"
        tools:text="Assessment Name" />

    <TextView
        android:id="@+id/assessmentTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/assessmentNameText"
        android:layout_alignStart="@+id/assessmentNameText"
        android:layout_below="@+id/assessmentNameText"
        android:layout_marginTop="11dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewasdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/assessmentTitleText"
        android:layout_alignStart="@+id/assessmentTitleText"
        android:layout_below="@+id/editAssessmentBtn2"
        android:layout_marginTop="88dp"
        android:text="Description"
        android:textStyle="bold"
        tools:text="Description" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewasdf"
        android:layout_alignStart="@+id/textViewasdf"
        android:layout_below="@+id/textViewasdf"
        android:layout_marginTop="38dp"
        android:text="TextView" />

</RelativeLayout>
