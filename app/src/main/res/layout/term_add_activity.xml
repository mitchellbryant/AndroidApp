<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u9.myapplication.TermDetailActivity">

    <EditText
        android:id="@+id/courseNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="93dp"
        android:ems="10"
        android:hint="Term Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/courseStartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/courseNameText"
        android:layout_alignRight="@+id/courseNameText"
        android:layout_below="@+id/courseNameText"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="Start Date (12-12-2012)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/courseEndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/courseStartText"
        android:layout_alignStart="@+id/courseStartText"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="End Date (6-12-2013)"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/courseEndText"
        android:layout_alignStart="@+id/courseEndText"
        android:layout_below="@+id/courseEndText"
        android:layout_marginTop="88dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="addTermBtn"
        android:text="Save" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveBtn"
        android:layout_alignBottom="@+id/saveBtn"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        android:layout_toEndOf="@+id/saveBtn"
        android:layout_toRightOf="@+id/saveBtn"
        android:background="@android:color/holo_orange_light"
        android:onClick="cancelAddTermBtn"
        android:text="Cancel" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:id="@id/toolbar3"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
             />

    </android.support.design.widget.AppBarLayout>

</RelativeLayout>
