<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u9.myapplication.MainActivity">

    <Button
        android:id="@+id/courseButton"
        android:layout_width="219dp"
        android:layout_height="89dp"
        android:onClick="buttonCourse"
        android:text="Courses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/termButton"
        android:layout_alignStart="@+id/termButton" />

    <Button
        android:id="@+id/mentorButton"
        android:layout_width="219dp"
        android:layout_height="89dp"
        android:onClick="buttonMentor"
        android:text="Assessments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.742"
        android:layout_below="@+id/courseButton"
        android:layout_alignLeft="@+id/courseButton"
        android:layout_alignStart="@+id/courseButton"
        android:layout_marginTop="61dp" />

    <Button
        android:id="@+id/termButton"
        android:layout_width="219dp"
        android:layout_height="89dp"
        android:onClick="buttonTerm"
        android:text="Terms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176"
        android:layout_above="@+id/courseButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar"
        android:label="@string/app_name">


    </android.support.design.widget.AppBarLayout>

</RelativeLayout>
